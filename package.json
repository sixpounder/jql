{
  "name": "@jql/jql",
  "version": "1.0.0",
  "description": "A sql-like querying interface for javascript objects and DOM",
  "engines": {
    "node": ">=18.18.0"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/jql.d.ts",
      "main": "./dist/lib/jql.js",
      "module": "./dist/jql.mjs",
      "default": "./dist/jql.mjs"
    }
  },
  "scripts": {
    "build": "rimraf ./dist && tsc && npm run build:mjs && npm run build:cjs && npm run copy-assets",
    "build:mjs": "esbuild ./src/lib.ts --bundle --format=esm --outfile=dist/jql.mjs",
    "build:cjs": "esbuild ./src/lib.ts --bundle --format=cjs --outfile=dist/jql.cjs",
    "copy-assets": "cp build/templates/package.json.template dist/package.json && cp README.md dist/README.md",
    "lint": "eslint --fix .",
    "test": "jest"
  },
  "author": "Andrea Coronese <sixpounder@protonmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.5",
    "@types/lodash": "^4.14.202",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
