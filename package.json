{
  "name": "obql",
  "version": "0.1.0",
  "description": "A sql-like querying and aggregating interface for javascript objects and the DOM",
  "engines": {
    "node": ">=18.18.0"
  },
  "keywords": [
    "sql",
    "dom",
    "query",
    "collections"
  ],
  "exports": {
    ".": {
      "types": "./lib/obql.d.ts",
      "main": "./lib/obql.js",
      "module": "./obql.mjs",
      "default": "./obql.mjs"
    }
  },
  "scripts": {
    "build": "rimraf ./dist && tsc && npm run build:mjs && npm run build:cjs && npm run copy-assets",
    "build:mjs": "esbuild ./src/index.ts --bundle --format=esm --outfile=dist/obql.mjs",
    "build:cjs": "esbuild ./src/index.ts --bundle --format=cjs --outfile=dist/obql.cjs",
    "copy-assets": "node build/assets.cjs dist && cp README.md dist/README.md",
    "lint": "eslint --fix .",
    "link": "npm run build && cd dist && npm link",
    "publish-package": "npm run build && npm test && cd dist && npm publish",
    "test": "jest --coverage"
  },
  "author": "Andrea Coronese <sixpounder@protonmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.5",
    "@types/lodash-es": "^4.17.12",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "lodash": "^4.17.21",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
}
